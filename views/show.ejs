<% include ./partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">
            <div class="title">
                <%= blog.title %>
            </div>
            <div class="ui top attached segment">
                <div class="item">
                    <img class="ui centered rounded image" src="<%= blog.image %>" alt="Blog Image">
                    <div class="description">
                        <p><%= blog.description %></p>
                    </div>
                    <div class="content">
                        <p><%- blog.body %></p>
                    </div>
                    <a class="ui teal basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
                    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="delete">
                        <button class="ui red basic right floated button">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

<% include ./partials/footer %>